@import './colors'

.lui-button
  display inline-block
  margin 1rem .75rem

  a
    display inline-block

  button
    appearance none
    background #fff
    border-radius 4px
    border none
    box-shadow inset 1px 1px 1px rgba(255, 255, 255, 0.3), 0 1px 1.5px rgba(0, 0, 0, 0.15), 0 1px 1px rgba(0, 0, 0, 0.2)
    color #000
    cursor pointer
    display inline-block
    font-size 15px
    font-weight bold
    letter-spacing 0.4px
    margin 0
    padding 1em 2em
    position relative
    text-transform uppercase
    transition 200ms background cubic-bezier(0.4, 0, 0.2, 1)
    &:hover
      outline none
      background #e6e6e6

  svg
    fill #2980b9
    height 100%
    left 0
    pointer-events none
    position absolute
    top 0
    width 100%
    z-index 0
    circle
      opacity 0

  [data-color]
    color #fff

  [data-color='black']
    background $black
    &:hover
      background lighten($black, 5)
    svg
      fill lighten($black, 15)

  [data-color='blue']
    background $blue
    &:hover
      background darken($blue, 5)
    svg
      fill darken($blue, 15)

  [data-color='green']
    background $green
    &:hover
      background darken($green, 5)
    svg
      fill darken($green, 15)

  [data-color='orange']
    background $orange
    &:hover
      background darken($orange, 5)
    svg
      fill darken($orange, 15)

  [data-color='pink']
    background $pink
    &:hover
      background darken($pink, 5)
    svg
      fill darken($pink, 15)

  [data-color='purple']
    background $purple
    &:hover
      background darken($purple, 5)
    svg
      fill darken($purple, 15)

  [data-color='red']
    background $red
    &:hover
      background darken($red, 5)
    svg
      fill darken($red, 15)

  [data-color='teal']
    background $teal
    &:hover
      background darken($teal, 5)
    svg
      fill darken($teal, 155)

  [data-color='white']
    background #fff
    color #000
    &:hover
      background darken(#fff, 5)
    svg
      fill darken(#fff, 15)

