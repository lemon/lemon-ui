.lui-header-menu
  line-height 1

  ul
    display flex
    flex-wrap wrap
    list-style none
    margin 0
    padding 0
    position relative

  li
    display block
    margin 0

  a
    -khtml-user-select none
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    -webkit-touch-callout none
    color #b5b5b5
    cursor pointer
    display block
    font-size 1.05em
    font-weight bold
    height 3em
    padding 1em 1.5em
    text-align center
    transition color 0.3s
    user-select none
    &:hover, &:focus
      outline none
      color #929292
    &.active
      color #d94f5c

  .line
    background #d94f5c
    border 1px solid #130f21
    border-width 0 0 0 0
    height 2px
    left 0
    pointer-events none
    position absolute
    top 100%
    transition left 0.5s, width 0.5s
    transition-timing-function cubic-bezier(1, 0.01, 0, 1.22)
    width 0
