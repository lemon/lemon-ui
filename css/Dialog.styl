.lui-dialog
  -webkit-align-items center
  -webkit-justify-content center
  align-items center
  display flex
  height 100%
  justify-content center
  left 0
  pointer-events none
  position fixed
  top 0
  width 100%

.lui-dialog-overlay
  -webkit-backface-visibility hidden
  background rgba(55, 58, 71, 0.9)
  height 100%
  left 0
  opacity 0
  position absolute
  top 0
  transition opacity 0.3s
  width 100%
  z-index 1

.lui-dialog-content
  max-width 560px
  min-width 290px
  opacity 0
  padding 0
  pointer-events auto
  position relative
  text-align center
  width 50%
  z-index 5

.lui-dialog-inner
  opacity 0
  background #fff

.lui-dialog-open .lui-dialog-inner
  padding 4em
  opacity 1
  transition opacity 0.85s 0.35s

.lui-dialog h2
  margin 0
  font-weight 400
  font-size 2em
  padding 0 0 2em
  margin 0

.lui-dialog-open .lui-dialog-overlay
  transition-duration 0.8s
  opacity 1
  pointer-events auto

.lui-dialog-open .lui-dialog-content
  opacity 1

.lui-dialog-close .lui-dialog-overlay
  transition-duration 0.5s

.lui-morph-shape
  position absolute
  width calc(100% + 4px)
  height calc(100% + 4px)
  top -2px
  left -2px
  z-index -1

.lui-morph-shape svg rect
  stroke #fff
  stroke-width 2px
  stroke-dasharray 1680

.lui-dialog-open .lui-morph-shape svg rect
  animation anim-dash 0.6s forwards

.lui-dialog-open h2
  animation anim-elem-1 0.7s ease-out both

.lui-dialog-open button
  animation anim-elem-2 0.7s ease-out both

@keyframes anim-dash {
  0% {
    stroke-dashoffset 1680
  }
  100% {
    stroke-dashoffset 0
  }
}

@-webkit-keyframes anim-dash {
  0% {
    stroke-dashoffset 1680
  }
  100% {
    stroke-dashoffset 0
  }
}

/* Inner elements animations */

@-webkit-keyframes anim-elem-1 {
  0% {
    opacity 0
    -webkit-transform translate3d(-150px, 0, 0)
  }
  100% {
    opacity 1
    -webkit-transform translate3d(0, 0, 0)
  }
}

@keyframes anim-elem-1 {
  0% {
    opacity 0
    -webkit-transform translate3d(-150px, 0, 0)
    transform translate3d(-150px, 0, 0)
  }
  100% {
    opacity 1
    -webkit-transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)
  }
}

@-webkit-keyframes anim-elem-2 {
  0% {
    opacity 0
    -webkit-transform translate3d(150px, 0, 0)
  }
  100% {
    opacity 1
    -webkit-transform translate3d(0, 0, 0)
    }
}

@keyframes anim-elem-2 {
  0% {
    opacity 0
    -webkit-transform translate3d(150px, 0, 0)
    transform translate3d(150px, 0, 0) 
  }
  100% {
    opacity 1
    -webkit-transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)
  }
}

