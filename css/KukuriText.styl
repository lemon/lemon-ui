.kukuri-text > span
  color #fff
  display inline-block
  outline none
  overflow hidden
  position relative
  text-decoration none
  text-transform uppercase
  &:hover
    color #fff
  &:after
    background #2D2D2D
    content ''
    height 4px
    margin-top -2px
    position absolute
    right 0
    top 50%
    transform translate3d(-100%,0,0)
    transition-timing-function cubic-bezier(0.7,0,0.3,1)
    transition transform 0.4s
    width 100%
    &:hover
      transform translate3d(100%,0,0)
  &:before
    color #2D2D2D
    content attr(data-letters)
    overflow hidden
    position absolute
    transition width 0.4s 0.3s
    white-space nowrap
    width 0%
    z-index 2
    &:hover
      width 100%
